@model RoleTopMVC.ViewModels.MensagemViewModel

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>RolêTop</title>
    <link href="~/img/logo_roletop.png" rel="icon" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css?family=Carter+One|Itim|Limelight|Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Luckiest+Guy&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    @if("Usuario".Equals(Model.NomeView))
    {<link rel="stylesheet" type="text/css" href="~/css/userPrincipal.css">}
    @if("Home".Equals(Model.NomeView) || ("Login".Equals(Model.NomeView)) || ("Cadastro".Equals(Model.NomeView)))
    {<link rel="stylesheet" type="text/css" href="~/css/Home.css">}
    @if(("Login".Equals(Model.NomeView)) || ("Cadastro".Equals(Model.NomeView)))
    {<link rel="stylesheet" type="text/css" href="~/css/login_cadastro.css">}
    @if("User_Home".Equals(Model.NomeView))
    {<link rel="stylesheet" type="text/css" href="~/css/userHome.css">}
    @if(("Cadastro".Equals(Model.NomeView)) || ("Usuario".Equals(Model.NomeView)) || ("Login".Equals(Model.NomeView))){
        <link rel="stylesheet" type="text/css" href="~/css/SucessoFalha.css">
    }
    <script src="https://kit.fontawesome.com/349a64cb04.js"></script>

</head>

<body>
    

    <header>
    @if(("Login".Equals(Model.NomeView)) || ("Cadastro".Equals(Model.NomeView)) || ("Home".Equals(Model.NomeView)))
    {
        Html.RenderPartial("_NavHomePages");
    }
    @if("Usuario".Equals(Model.NomeView)){
        Html.RenderPartial("_NavUserPages");

    }
    @if("User_Home".Equals(Model.NomeView)){
        Html.RenderPartial("_HeaderUserHome");
    }
</header>

@RenderBody()
    <footer>
        <div class="flex footer-container">
            <div class="flex footer-logo">
            <img  src="../img/logo_roletop.png" alt="Logo do RoleTop">
            </div>
            <div class=" flex social">
                <div class="flex foot">
                    <p>Facebook:</p>
                    <br>
                    <i class="social-icon fab fa-facebook-square fa-2x"></i>
                </div>
                <div class="flex foot">
                    <p>Instagram:</p>
                    <br>
                    <i class="social-icon fab fa-instagram fa-2x"></i>
                </div>
                <div class="flex foot">
                    <p>Acesso a Deficiente:</p>
                    <i class="social-icon fab fa-accessible-icon fa-2x"></i>
                </div>
            </div>
        </div>
    </footer>
    <script>
        function toggleMobileMenu() {
            var ul = document.querySelector("nav ul");
            var commonButtons = document.querySelectorAll("nav .bt-common-menu");
            var icon = document.querySelector(".icon > i");

            ul.classList.toggle("mobile-mode");

            if (icon.classList.contains("fa-bars")) {
                icon.classList.remove("fa-bars");
                icon.classList.remove("fa");

                icon.classList.add("fas");
                icon.classList.add("fa-hand-middle-finger");
            } else {
                icon.classList.remove("fas");
                icon.classList.remove("fa-hand-middle-finger");

                icon.classList.add("fa");
                icon.classList.add("fa-bars");
            }

            for (var button of commonButtons) {
                button.classList.toggle("active");
            }

        }
    </script>
    </body>
    </html>