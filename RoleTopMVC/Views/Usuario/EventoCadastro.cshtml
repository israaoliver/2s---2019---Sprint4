        <main class="ex cadastro flex">
            <div class="flex user-container">
                    <i class="icon fas fa-folder-plus fa-3x"></i>
                <h1>Cadastrar Evento</h1>
            </div>
            <section id="cadastro">

                <form method="GET" action="user-pagar.html">

                    <div class="flex cad-box">

                        <div>
                            <label for="nome">Nome do Evento</label>
                            <br>
                            <input id="nome" type="text">
                        </div>
                        <div class="marg">
                            <label for="data">Data do Evento</label>
                            <br>
                            <input id="data" type="date">
                        </div>
                    </div>
                    <div class="flex cad-box-2">
                        <div>
                            <label for="tipo">Tipo de Evento</label>
                            <br>
                            <select id="tipo">
                                <option value="" disabled selected>Selecione</option>
                                <option>Aniversário</option>
                                <option>Balada</option>
                                <option>Casamento</option>
                                <option>Chá de bebe</option>
                                <option>Confraternizações</option>
                                <option>Festas</option>
                                <option>Formatura</option>
                                <option>15 anos</option>
                            </select>
                        </div>
                        <div>
                            <label for="opcional">Serviços Opcionais</label>
                            <br>
                            <select id="opcional">
                                <option value="" disabled selected>Equipamentos</option>
                                <option>Iluminação</option>
                                <option>Som</option>
                                <option>Iluminação e Som</option>
                                <option>Simples</option>
                            </select>
                            <p>*Limpeza incluso em todos os planos.</p>
                        </div>
                    </div>
                    <div>
                        <label for="numero">Quantidade de Pessoas</label>
                        <br>
                        <div class="flex quant">

                            <input id="numero" type="number" min="20" max="400">
                            <p> (max:400)</p>
                        </div>
                    </div>
                    <div>
                        <label for="pictures">Carrega a suas imagens</label>
                        <br>
                        <input id="pictures" type="file" name="arquivos"  accept="image/png, image/jpeg"  multiple />
                        <p>*Obrigatorio imagen se o evento for publico</p>
                    </div>
                    <div class="descricao">
                        <label for="descricao">Descrição</label>
                        <br>
                        <textarea id="descricao"></textarea>
                    </div>
                    <div>
                        <label for="priv"> Público/Privado</label>
                        <br>
                        <div class="flex pub-priv">

                            <input id="priv" type="radio" name="pub_priv" value="priv" height="50%">
                            <p>Privado</p>
                        </div>
                        <br>
                        <div class="flex pub-priv">

                            <input id="priv" type="radio" name="pub_priv" value="pub">
                            <p>Público</p>
                        </div>
                    </div>
                    <div class="flex submit">

                        <input type="submit" value="Pagar">
                    </div>

                </form>
            </section>
        </main>